.page-header
  = link_to new_instrument_path, :class => 'btn btn-primary' do
    %span.glyphicon.glyphicon-plus
    New Instrument
  %h1 Listing instruments

.table-responsive
  %table.table.table-striped.table-bordered.table-hover
    %thead
      %tr
        %th Name
        %th
        %th
        %th

    %tbody
      - @instruments.each do |instrument|
        %tr
          %td= instrument.name
          %td= link_to 'Show', instrument
          %td= link_to 'Edit', edit_instrument_path(instrument)
          %td= link_to 'Destroy', instrument, :data => { confirm: 'Are you sure?' }, :method => :delete
